{
    "root": true,
    "extends": "airbnb-base",
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
        "import"
    ],
    "parserOptions": {
       "ecmaVersion": 2017,
       "sourceType": "module",
       "ecmaFeatures": {
         "globalReturn": true,
         "experimentalObjectRestSpread": true
       }
    },
    "rules": {
        "indent": "off",
        "no-tabs": "off",
        "no-param-reassign": "off",
        "no-trailing-spaces": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": 1,
        "func-names": ["error", "never"],
        "consistent-return": "off",
        "no-var": 1,
        "class-methods-use-this": "off",
        "spaced-comment": ["error", "always", { "exceptions": ["*"] }],
        "max-len": ["error", { "ignoreComments": true }, { "code": 120 }],
        "no-console": "off",
        "no-use-before-define": "off",
        "no-underscore-dangle": ["error", { "allow": ["_id"] }]
    },
    "globals": {
        "AutoTags": true,
        "cano": true,
        "Client": true,
        "ObjectModel": true,
        "RecentObject": true,
        "Shared": true,
        "User": true,
        "Workspace": true,

        "ClientController": true,
        "ObjectController": true,
        "PresignedURLController": true,
        "RecentObjectController": true,
        "SharedController": true,
        "UserController": true,
        
        "AuthorizationError": true,
        "CanoError": true,
        "ClientError": true,
        "ObjectError": true,
        "UserError": true,
        
        "AuthPolicies": true,
        "ClientPolices": true,
        
        "EmailService": true,
        "ObjectService": true,
        "RequestService": true,
        "S3Service": true,
        "TagService": true,
        "TokenService": true,
        "UserService": true
    }
}
